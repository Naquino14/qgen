{
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "src/runner.ts"
        ]
    },
    "$schema": "http://json.schemastore.org/tslint",
    "rules": {
        "no-shadowed-variable": false,
        "no-bitwise": false,
        "one-variable-per-declaration": false,
        "semicolon": [
            false,
            "always"
        ],
        "radix": false
    }
}