{
	"compilerOptions": {
		"jsx": "react",
		"target": "ES2022",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./lib",
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"**/__tests__/*"
	],
}